{
  "compilerOptions": {
    "target": "es5",
    "pretty": true,
    "module": "CommonJS",
    "moduleResolution": "NodeNext",
    "lib": ["es6"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "tests/*.ts",
    "spec/helpers/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "./dist",
    "./build",
    "spec"
  ]
}